@{
    Layout = "../Shared/_Layout.cshtml";
    ViewBag.Title = "SmartStore | AdminPanel";
}

<div class="addProduct-container">
    <h2 class="form-title">Add Product</h2>
    @using (Ajax.BeginForm("AddProductForm", "Admin", new AjaxOptions { HttpMethod = "POST", OnSuccess = "success", OnFailure = "fail", UpdateTargetId = "resultTarget" }))
    {
        @model SmartStore.Models.Product
        <form method="POST" class="addProduct-form">
            <div class="form-group">
                <label for="name">Product Name</label>
                <input type="text"
                       name="ProductName"
                       placeholder="Product name"
                       required />
            </div>
            <div class="form-group">
                <label for="name">Product Description</label>
                <input type="text" name="ProductDescription" placeholder="Product Description" />
            </div>
            <div class="form-group">
                <label for="name">Product Price</label>
                <input type="number"
                       name="ProductPrice"
                       placeholder="Product Price"
                       required />
            </div>
            <div class="form-group">
                <label for="ProductCategory">Product Category</label>
                <select name="ProductCategory" id="ProductCategory">
                    <option value="default">default</option>
                    <option value="none">none</option>
                </select>
            </div>
            <div class="form-group">
                <label for="name">Product Picture</label>
                <input type="file" name="ProductPicture" placeholder="Product Picture" />
            </div>
            <div class="form-group form-button">
                <input type="submit" name="submit" class="form-submit" value="Submit" />
            </div>
        </form>
    }
</div>;