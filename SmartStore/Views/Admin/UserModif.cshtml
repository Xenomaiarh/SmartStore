@{
    Layout = "../Shared/_Layout.cshtml";
    ViewBag.Title = "SmartStore | AdminPanel";
}


<style>
    .container {
        margin-top: 20px;
    }

    .table th, .table td {
        vertical-align: middle;
    }

    .role-select {
        width: 100%;
    }
</style>
<div class="container">
    <h1 class="text-center mb-4">Admin Panel - Users</h1>
    <table class="table table-bordered table-hover">
        <thead class="thead-light">
            <tr>
                <th>User ID</th>
                <th>Username</th>
                <th>Email</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.ID</td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>
                        <select class="form-control role-select">
                            <option value="None" @(user.Level.ToString() == "None" ? "selected" : "")>None</option>
                            <option value="User" @(user.Level.ToString() == "User" ? "selected" : "")>User</option>
                            <option value="Moder" @(user.Level.ToString() == "Moder" ? "selected" : "")>Moder</option>
                            <option value="Admin" @(user.Level.ToString() == "Admin" ? "selected" : "")>Admin</option>
                        </select>
                    </td>
                    <td>
                        <button class="btn btn-primary change-role-btn" data-user-id="@user.ID">
                            <i class="fas fa-sync-alt"></i> Change Role
                        </button>
                        <button class="btn btn-danger delete-user-btn" data-user-id="@user.ID">
                            <i class="fas fa-trash-alt"></i> Delete
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
        $(document).ready(function () {
            $('.change-role-btn').click(function () {
                var userId = $(this).data('user-id');
                var newRole = $(this).closest('tr').find('.role-select').val();
                if (newRole !== null) {
                    $.ajax({
                        type: 'POST',
                        url: '@Url.Action("ChangeUserRoleAction", "Admin")',
                        data: { userId: userId, newRole: newRole },
                        success: function (response) {
                            if (response.success) {
                                alert('User role successfully changed.');
                            } else {
                                alert('An error occurred while changing user role: ' + response.errorMessage);
                            }
                        },
                        error: function () {
                            alert('An error occurred while processing your request.');
                        }
                    });
                }
            });

            $('.delete-user-btn').click(function () {
                var userId = $(this).data('user-id');
                var rowToDelete = $(this).closest('tr');

                if (confirm('Are you sure you want to delete this user?')) {
                    $.ajax({
                        type: 'POST',
                        url: '@Url.Action("DeleteUser", "Admin")',
                        data: { userId: userId },
                        success: function (response) {
                            if (response.success) {
                                alert('User deleted successfully.');
                                rowToDelete.remove();
                            } else {
                                alert('Error: ' + response.errorMessage);
                            }
                        },
                        error: function () {
                            alert('An error occurred while processing your request.');
                        }
                    });
                }
            });
        });
</script>
