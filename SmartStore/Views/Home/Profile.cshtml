
@{
    Layout = "../Shared/_HomeProfile.cshtml";
    ViewBag.Title = "SmartStore | Профиль";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Profile</title>
</head>
<body>
    <div class="wrapper">
        <div class="container-fluid">

            <!-- start page title -->
            <div class="col-12">
                <div class="page-title-box">
                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
                            <li class="breadcrumb-item active">Profile</li>
                        </ol>
                    </div>
                    <h4 class="page-title">Profile</h4>
                </div>
            </div>
            <!-- end page title -->

            <div class="col-lg-6 col-xl-6" align="center" style="left:25%">
                <div class="card-box text-center">
                    <img src="~/Content/images/users/avatar-1.jpg" class="rounded-circle avatar-xl img-thumbnail"
                         alt="profile-image">

                    <h4 class="mb-0">Admin</h4>
                    <p class="text-muted">Administrator</p>

                    <div class="text-left mt-3">
                        <p class="text-muted mb-2 font-13"><strong>Full Name :</strong> <span class="ml-2">Admin</span></p>

                        <p class="text-muted mb-2 font-13">
                            <strong>Mobile :</strong><span class="ml-2">
                                (373)
                                78462360
                            </span>
                        </p>

                        <p class="text-muted mb-2 font-13"><strong>Email :</strong> <span class="ml-2 ">admin@mail.ru</span></p>

                        <p class="text-muted mb-1 font-13"><strong>Location :</strong> <span class="ml-2">MD</span></p>
                    </div>
                </div> <!-- end card-box -->
            </div> <!-- end col-->
            <div class="col-lg-6 col-xl-6" style="left:25%">
                <div class="card-box">
                    <ul class="nav nav-pills navtab-bg">
                        <li class="nav-item">
                            <a href="#about-me" data-toggle="tab" aria-expanded="true" class="nav-link active ml-0">
                                <i class="mdi mdi-face-profile mr-1"></i>History
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="#settings" data-toggle="tab" aria-expanded="false" class="nav-link">
                                <i class="mdi mdi-settings-outline mr-1"></i>Settings
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "Admin")"class="nav-link danger">
                                <i class="mdi mdi-account-key mr-1"></i>AdminPanel
                            </a>
                        </li>
                    </ul>

                    <div class="tab-content">

                        <div class="tab-pane show active" id="about-me">

                            <h5 class="mb-4 text-uppercase">
                                <i class="mdi mdi-cart mr-1"></i>
                                <a href="@Url.Action("Cart", "Home")">View Cart</a>
                            </h5>
                            <h5 class="mb-3 mt-4 text-uppercase">
                                <i class="mdi mdi-cards-variant mr-1"></i>
                                History
                            </h5>
                            <div class="table-responsive">
                                <table class="table table-borderless mb-0">
                                    <thead class="thead-light">
                                        <tr>
                                            <th>#</th>
                                            <th>Product Name</th>
                                            <th>Count</th>
                                            <th>Date</th>
                                            <th>Status</th>
                                            <th>Price</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>1.</td>
                                            <td>Apple Watch</td>
                                            <td>3</td>
                                            <td>15.05.2024</td>
                                            <td><span class="badge badge-info">Work in Progress</span></td>
                                            <td>$7.00</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>

                        </div>
                        <!-- end timeline content-->

                        <div class="tab-pane" id="settings">
                            <form>
                                <h5 class="mb-3 text-uppercase bg-light p-2"><i class="mdi mdi-account-circle mr-1"></i> Personal Info</h5>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="firstname">First Name</label>
                                            <input type="text" class="form-control" id="firstname" placeholder="Enter first name">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="lastname">Last Name</label>
                                            <input type="text" class="form-control" id="lastname" placeholder="Enter last name">
                                        </div>
                                    </div> <!-- end col -->
                                </div> <!-- end row -->

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="useremail">Email Address</label>
                                            <input type="email" class="form-control" id="useremail" placeholder="Enter email">
                                            <span class="form-text text-muted"><small>If you want to change email please <a href="javascript: void(0);">click</a> here.</small></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="userpassword">Password</label>
                                            <input type="password" class="form-control" id="userpassword" placeholder="Enter password">
                                            <span class="form-text text-muted"><small>If you want to change password please <a href="javascript: void(0);">click</a> here.</small></span>
                                        </div>
                                    </div> <!-- end col -->
                                </div> <!-- end row -->

                                <h5 class="mb-3 text-uppercase bg-light p-2"><i class="mdi mdi-office-building mr-1"></i> Company Info</h5>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="companyname">Company Name</label>
                                            <input type="text" class="form-control" id="companyname" placeholder="Enter company name">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="cwebsite">Website</label>
                                            <input type="text" class="form-control" id="cwebsite" placeholder="Enter website url">
                                        </div>
                                    </div> <!-- end col -->
                                </div> <!-- end row -->
                                <div class="text-right">
                                    <button type="submit" class="btn btn-success waves-effect waves-light mt-2"><i class="mdi mdi-content-save"></i> Save</button>
                                </div>
                            </form>
                        </div>
                        <!-- end settings content-->

                    </div> <!-- end tab-content -->
                </div> <!-- end card-box-->

            </div> <!-- end col -->
            <!-- end row-->

        </div> <!-- end container -->
    </div>
</body>
</html>
